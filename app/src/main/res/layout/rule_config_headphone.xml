<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bind="http://robobinding.org/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:divider="@drawable/divider_small"
	android:showDividers="middle"
	style="@style/container">
	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		bind:source="{headphoneTrigger}"
		bind:itemLayout="@layout/list_item_generic"
		bind:dropdownLayout="@layout/list_item_generic"
		bind:selectedItemPosition="${headphoneTriggerSelectedPosition}" />
	<include layout="@layout/rule_config_save" />
</LinearLayout>