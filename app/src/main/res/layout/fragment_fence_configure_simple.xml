<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bind="http://robobinding.org/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".MainActivity">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		style="@style/container">
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<android.support.design.widget.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/fence_name_hint"
				bind:text="${name}" />
		</android.support.design.widget.TextInputLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			bind:visibility="{listsEmpty}"
			tools:visibility="gone">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:gravity="center_horizontal"
				android:text="Nothing here yet.\nUse button down below to add items"/>
		</RelativeLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			bind:visibility="{listsNotEmpty}">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="When..." />
			<ListView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				tools:listitem="@layout/list_item_rule"
				bind:source="{rules}"
				bind:itemLayout="@layout/list_item_rule" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Then..." />
			<ListView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				tools:listitem="@layout/list_item_action"
				bind:source="{actions}"
				bind:itemLayout="@layout/list_item_action" />
		</LinearLayout>
	</LinearLayout>
	<com.github.clans.fab.FloatingActionMenu
		android:id="@+id/fabMenu"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|end"
		android:layout_marginRight="@dimen/padding.double"
		android:layout_marginEnd="@dimen/padding.double"
		android:layout_marginBottom="@dimen/padding.double"
		app:menu_colorNormal="@color/button.fam.background"
		app:menu_colorPressed="@color/button.fam.background.pressed"
		app:menu_colorRipple="@color/button.fam.background.ripple"
		app:menu_icon="@drawable/ic_action_add">
		<com.github.clans.fab.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/ic_action_trigger"
			app:fab_colorNormal="@color/button.fab.background"
			app:fab_colorPressed="@color/button.fab.background.pressed"
			app:fab_colorRipple="@color/button.fab.background.ripple"
			app:fab_size="mini"
			app:fab_label="Rule"
			bind:onClick="createRule" />
		<com.github.clans.fab.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/ic_action_action"
			app:fab_colorNormal="@color/button.fab.background"
			app:fab_colorPressed="@color/button.fab.background.pressed"
			app:fab_colorRipple="@color/button.fab.background.ripple"
			app:fab_size="mini"
			app:fab_label="Action"
			bind:onClick="createAction" />
	</com.github.clans.fab.FloatingActionMenu>
</android.support.design.widget.CoordinatorLayout>